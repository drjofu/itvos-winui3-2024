<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Winui3Beispiele.Views.Datenbindung4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winui3Beispiele.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:main="using:Winui3Beispiele"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Page.Resources>
    <local:ArtikelTemplateSelector x:Key="ATS">
      <local:ArtikelTemplateSelector.Templates>
        <DataTemplate x:DataType="main:Artikel">
          <TextBlock Text="{x:Bind Bezeichnung}"/>
        </DataTemplate>
        <DataTemplate x:DataType="main:Artikel">
          <TextBlock Text="{x:Bind Bezeichnung}" FontWeight="Bold" Foreground="Red"/>
        </DataTemplate>
      </local:ArtikelTemplateSelector.Templates>
    </local:ArtikelTemplateSelector>
  </Page.Resources>
  <StackPanel>
    <ListBox ItemsSource="{x:Bind DerLaden.Artikel}" ItemTemplateSelector="{StaticResource ATS}"/>
  </StackPanel>
</Page>
