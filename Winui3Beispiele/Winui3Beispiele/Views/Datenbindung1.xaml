<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Winui3Beispiele.Views.Datenbindung1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winui3Beispiele.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:main="using:Winui3Beispiele"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Page.Resources>
    <main:SchriftgroesseConverter x:Key="SGC" Offset="10" Faktor="3"/>
    <main:SmileyConverter x:Key="SC" />
  </Page.Resources>
  <StackPanel>
    <Slider Name="SL" Margin="5" SmallChange="0.1" Value="7"/>
    <TextBlock Margin="5" FontSize="100" Text="{Binding ElementName=SL, Path=Value, Converter={StaticResource SC}}"/>
    <TextBox Margin="5" Text="{Binding ElementName=SL, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             FontSize="{Binding ElementName=SL, Path=Value, Converter={StaticResource SGC}}"/>
    <TextBox Margin="5"/>
  </StackPanel>
</Page>
