<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winui3Beispiele">

  <Color x:Key="Firmenfarbe1" >#ff0066ff</Color>
  <SolidColorBrush x:Key="Brush1" Color="{StaticResource Firmenfarbe1}"/>
  <Color x:Key="Firmenfarbe2" >#ff55ee33</Color>
  <SolidColorBrush x:Key="Brush2" Color="{StaticResource Firmenfarbe2}"/>
  <LinearGradientBrush x:Key="Brush3">
    <GradientStop Offset="0" Color="{StaticResource Firmenfarbe1}"/>
    <GradientStop Offset="1" Color="{StaticResource Firmenfarbe2}"/>
  </LinearGradientBrush>

</ResourceDictionary>
